{% extends "kufiBattleshipBundle:Layouts:layout.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('bundles/battleships/scripts/game.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/battleships/scripts/singleplayer.js') }}" type="text/javascript"></script>
{% endblock %}

{% block controlPanel %}
	<a href="{{ path("bs_index") }}">Main</a>
	<a href="{{ path("bs_sp_forceNew") }}">start new Game</a>
{% endblock %}

{% block body %}
	{% include "kufiBattleshipBundle:Game:ships.html.twig" with { "game" : game } %}
	
	<div id="messages">
		<div id="message">
		</div>
	</div>
	
	<div id="fields">
		{% include 'kufiBattleshipBundle:Game:gameField.html.twig' with {'fields': game.user1Fields, 'fieldId': 'userField', 'user': true} %}

		{% include 'kufiBattleshipBundle:Game:gameField.html.twig' with {'fields': game.user2Fields, 'fieldId': 'aiField', 'user': false} %}
		<div class="clear"></div>
	</div>
	
{% endblock %}