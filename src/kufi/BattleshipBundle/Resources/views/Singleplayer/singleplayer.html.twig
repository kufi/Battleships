{% extends "kufiBattleshipBundle:Layouts:layout.html.twig" %}

{% block javascripts %}
	<script src="{{ asset('bundles/battleships/scripts/singleplayer.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
	<div>
		<a href="{{ path("bs_sp_forceNew") }}">start new Game</a>
	</div>
	
	<div id="ships">
	
		<input type="radio" checked="checked" name="ships" id="carrier" {% if game.hasShip1WithLength(5) %} disabled="disabled" {% endif %} value="5" />
		<label for="carrier">Carrier</label>
		
		<input type="radio" name="ships" id="battleship" {% if game.hasShip1WithLength(4) %} disabled="disabled" {% endif %} value="4" />
		<label for="battleship">Battleship</label>
		
		<input type="radio" name="ships" id="cruiser" {% if game.hasShip1WithLength(3) %} disabled="disabled" {% endif %} value="3" />
		<label for="cruiser">Cruiser</label>
		
		<input type="radio" name="ships" id="submarine" {% if game.hasShip1WithLength(2) %} disabled="disabled" {% endif %} value="2" />
		<label for="submarine">Submarine</label>
		
		<input type="radio" name="ships" id="destroyer" {% if game.hasShip1WithLength(1) %} disabled="disabled" {% endif %} value="1" />
		<label for="destroyer">Destroyer</label>
	</div>
	<div id="orientation">
		<input type="radio" checked="checked" name="orientation" id="horizontal" value="1" />
		<label for="horizontal">Horizontal</label>
		
		<input type="radio" name="orientation" id="vertical" value="2" />
		<label for="vertical">Vertical</label>
	</div>
	
	<div id="messages">
		<div id="message">
		</div>
	</div>
	
	
	<div id="fields">
		{% include 'kufiBattleshipBundle:Singleplayer:gameField.html.twig' with {'fields': game.user1Fields, 'fieldId': 'userField', 'user': true} %}

		{% include 'kufiBattleshipBundle:Singleplayer:gameField.html.twig' with {'fields': game.user2Fields, 'fieldId': 'aiField', 'user': false} %}
		<div class="clear"></div>
	</div>
	
{% endblock %}