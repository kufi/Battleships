<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<title>Battleships</title>
		
		<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/base/jquery-ui.css" type="text/css" rel="stylesheet" />
		
		{% stylesheets filter='less' '@kufiBattleshipBundle/Resources/less/site.less' %}
			<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
		{% endstylesheets %}
		
		{% if(app.session.get("cssStyle") == "green") %}
		    {% stylesheets filter='less' '@kufiBattleshipBundle/Resources/less/green.less' %}
			    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
		    {% endstylesheets %}
		{% endif %}
		
		<script src="{{ asset('bundles/battleships/scripts/jquery.js') }}" type="text/javascript"></script>
		<script src="{{ asset('bundles/battleships/scripts/jquery-ui.js') }}" type="text/javascript"></script>
		
		{% block javascripts %}
		{% endblock %}
		
		<meta name="author" content="Patrick Kaufmann">
		<meta http-equiv="cache-control" content="no-cache">
	</head>
	<body>
		<div id="controlPanel">
			<div class="user">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					Hello <span class="name">{{ app.user.firstname }} {{ app.user.lastname }}</span>
				{% else %}
					You are not logged in
				{% endif %}
			</div>
			{% block controlPanel %}{% endblock %}
		</div>
	
		{% block body %}{% endblock %}
	</body>
</html>